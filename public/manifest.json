{
  "name": "원초적 본능",
  "description": "인스타그램 DM의 내용과 URL을 분석하여 로맨스 스캠 위험성을 알려주는 확장 프로그램입니다.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "/icons/favicon.ico",
    "48": "/icons/logo192.png",
    "128": "/icons/logo512.png"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["hot-reload.js"]
  },
  "content_scripts": [
    { 
      "js": ["content.js"],
      "matches": [ "<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}
