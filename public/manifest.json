{
  "name": "테스트",
  "description": "인스타그램 DM의 내용과 URL을 분석하여 로맨스 스캠 위험성을 알려주는 확장 프로그램입니다.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "/icons/favicon.ico",
    "48": "/icons/logo192.png",
    "128": "/icons/logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "_content_scripts": [
    {
      "matches": ["https://www.instagram.com/direct/t/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
